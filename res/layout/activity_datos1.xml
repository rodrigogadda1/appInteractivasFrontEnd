<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".datos1.activity_datos1">

    <ImageView
        android:id="@+id/datos1_img"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image07"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datos_1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="14dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_gray"
        android:drawableLeft="@drawable/image10"
        android:gravity="center"
        android:text="@string/datos_1"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datos1_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dni_TipoText"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_gray"
        android:text="Tipo :"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datos_1" />

    <Spinner
        android:id="@+id/dni_Tipo"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_white"
        android:entries="@array/dni_Tipo"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datos_1" />

    <TextView
        android:id="@+id/numero"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginStart="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_gray"
        android:text="NÃºmero :"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dni_TipoText" />

    <EditText
        android:id="@+id/numerodoc"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_white"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        android:hint="@string/numerodoc"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dni_Tipo" />

    <TextView
        android:id="@+id/nombresTexto"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginStart="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_gray"
        android:text="Nombre :"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numero" />

    <EditText
        android:id="@+id/nombres"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_white"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        android:hint="@string/nombres"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numerodoc" />

    <TextView
        android:id="@+id/apellidosTexto"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginStart="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_gray"
        android:text="Apellido :"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombresTexto" />

    <EditText
        android:id="@+id/apellidos"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_white"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        android:hint="@string/apellidos"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombres"/>

    <TextView
        android:id="@+id/sexoTexto"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginStart="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_gray"
        android:text="Sexo :"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apellidosTexto" />

    <Spinner
        android:id="@+id/sexoTipo"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_white"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        android:entries="@array/sexo_Tipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apellidos" />

    <TextView
        android:id="@+id/celularTexto"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginStart="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_gray"
        android:text="Celular :"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sexoTexto" />

    <EditText
        android:id="@+id/celular"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_white"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        android:hint="@string/celular"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sexoTipo" />

    <TextView
        android:id="@+id/emailTexto"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginStart="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_gray"
        android:text="E-mail :"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celularTexto" />

    <EditText
        android:id="@+id/email"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_white"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="6dip"
        android:textStyle="bold"
        android:hint="@string/prompt_email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/celular" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="4dp"
        android:onClick="back"
        android:src="@drawable/image12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/exit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintVertical_bias="1.0"/>

    <ImageView
        android:id="@+id/exit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="4dp"
        android:onClick="exit"
        android:src="@drawable/image04"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintEnd_toStartOf="@+id/next"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintVertical_bias="1.0"/>

    <ImageView
        android:id="@+id/next"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:onClick="next"
        android:src="@drawable/image08"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/exit"
        app:layout_constraintTop_toBottomOf="@+id/email"
        app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>