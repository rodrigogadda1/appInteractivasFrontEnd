<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".ReclamoActivo4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/AppTheme.Toolbar"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imgPpalRecActEstado"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image19"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/scvRecActEstado"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_gray"
            android:fadeScrollbars="false"
            android:fillViewport="true"
            android:gravity="center_vertical"
            android:scrollbarSize="8dp"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            android:scrollbars="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" >
            <LinearLayout
                android:id="@+id/linearLayout_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtRecActEstado"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="6dip"
                    android:text="Detalle del Reclamo"
                    android:textColor="#000000"
                    android:textSize="18sp"></TextView>
            </LinearLayout>
        </ScrollView>

        <EditText
            android:id="@+id/edtxtRecActEstadoDetalle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_white"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:padding="6dip"
            android:hint="Ingrese los detalles del Reclamo."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scvRecActEstado" />

        <ScrollView
            android:id="@+id/scvRecActEstadoListaImagenes"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="14dp"
            android:fillViewport="true"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_gray"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarSize="8dp"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/edtxtRecActEstadoDetalle" >
            <LinearLayout
                android:id="@+id/linearLayout_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical|center_horizontal">
                <ImageView
                    android:id="@+id/imgRecActEstado1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image40"
                    android:adjustViewBounds="true" >
                </ImageView>
                <ImageView
                    android:id="@+id/imgRecActEstado2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image41"
                    android:adjustViewBounds="true" >
                </ImageView>
                <ImageView
                    android:id="@+id/imgRecActEstado3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image42"
                    android:adjustViewBounds="true" >
                </ImageView>
                <ImageView
                    android:id="@+id/imgRecActEstado4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image43"
                    android:adjustViewBounds="true" >
                </ImageView>
                <ListView android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_width="0dp" />
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/imvRecActEstadoCamara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="14dp"
            android:onClick="camara"
            android:src="@drawable/image35"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/camara_texto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scvRecActEstadoListaImagenes" />

        <ImageView
            android:id="@+id/imvRecActEstadoFiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="76dp"
            android:onClick="archivos"
            android:src="@drawable/image36"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/archivos_texto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scvRecActEstadoListaImagenes" />

        <ScrollView
            android:id="@+id/scvRecActEstadosLista"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="14dp"
            android:fillViewport="true"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:scrollbarSize="8dp"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@+id/imvRecActEstadoCamara">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical|center_horizontal">
                <Button
                    android:id="@+id/btnRecActEstado1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ejemplo del 1º Reclamo Activo"
                    android:textAlignment="viewStart"
                    android:onClick="reclamo_1">
                </Button>
                <Button
                    android:id="@+id/btnRecActEstado2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ejemplo del 2º Reclamo Activo"
                    android:textAlignment="viewStart"
                    android:onClick="reclamo_2">
                </Button>
                <Button
                    android:id="@+id/btnRecActEstado3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ejemplo del 3º Reclamo Activo"
                    android:textAlignment="viewStart"
                    android:onClick="reclamo_3">
                </Button>
                <Button
                    android:id="@+id/btnRecActEstado4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ejemplo del 4º Reclamo Activo"
                    android:textAlignment="viewStart"
                    android:onClick="reclamo_4">
                </Button>
                <Button
                    android:id="@+id/btnRecActEstado5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ejemplo del 5º Reclamo Activo"
                    android:textAlignment="viewStart"
                    android:onClick="reclamo_5">
                </Button>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/txtRecActEstadoReclamo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_gray"
            android:gravity="center"
            android:text="Estado del Reclamo"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scvRecActEstadosLista" />

        <Button
            android:id="@+id/btnGuardarRecActEstado"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/button_red"
            android:text="Guardar"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            android:onClick="guardar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtRecActEstadoReclamo" />

        <ImageView
            android:id="@+id/btnBackRecActEstado"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="4dp"
            android:onClick="back"
            android:src="@drawable/image12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnExitREcActEstado"
            app:layout_constraintTop_toBottomOf="@+id/btnGuardarRecActEstado" />

        <ImageView
            android:id="@+id/btnExitREcActEstado"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="85dp"
            android:layout_marginBottom="4dp"
            android:onClick="exit"
            android:src="@drawable/image04"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnBackRecActEstado"
            app:layout_constraintTop_toBottomOf="@+id/btnGuardarRecActEstado" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/activity_menu"
        android:background="@drawable/side_nav_bar" />

</androidx.drawerlayout.widget.DrawerLayout>